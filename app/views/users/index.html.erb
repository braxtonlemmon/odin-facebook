<% provide(:title, 'Users') %>
<div class='container'>
	<h1>All users</h1>
	<div class='container'>
		<ul>
			<% @users.each do |user| %>
				<li>
					<%= link_to avatar_for(user, 50), user %>
					<%= link_to user.name, user %>
					<%= render 'friend_request_form', object: user %>
				</li>
			<% end %>
		<ul>
		<%= will_paginate @users%>
	</div>
</div>