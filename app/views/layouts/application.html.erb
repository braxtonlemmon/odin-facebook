<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
		<%= render 'layouts/rails_defaults' %>
		<%= render 'layouts/shim' %>
  </head>

  <body>
		<%= render 'layouts/header' %>
		<div class='container'>
			<% flash.each do |message_type, message| %>
		  	<%= message %>
			<% end %>
		</div>
    <%= yield %>
		<%= render 'layouts/footer'%>
		<%= debug(params) if Rails.env.development? %>
  </body>
</html>
