<header class='navbar navbar-fixed-top'>
	<div class='container'>
		<h4 class='logo'><%= link_to 'The Campfire', root_path %></h4>
		<nav>
			<ul class='nav navbar-nav navbar-right'>
				<% if user_signed_in? %>
					<li><%= link_to 'Home', root_path %></li>
					<%= render 'layouts/people_dropdown' %>
					<%= render 'layouts/activity_dropdown' %>
					<%= render 'layouts/profile_dropdown' %>
				<% else %>
					<li><%= render 'shared/login' %></li>
				<% end %>
			</ul>
		</nav>
	</div>
</header>